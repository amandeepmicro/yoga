<html>
  <head>
    <!-- Standard Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  
    <!-- Site Properties -->
    <title>Homepage</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    </head>
    <body>
      <div class="ui inverted segment">
        <div href="#"class="ui inverted secondary menu">
          <a href="/"class="active item">
            <i class="home icon"></i>Home
          </a>
          <a href="/home" class="item">
            Asanas
          </a>
          <a href="#"class="item">
            Contact
          </a>
        </div>
      </div>
    <div class="ui main text container">
      <div class="ui huge header">Yoga </div>
      <div class="ui inverted segment">
        <p>Here are all the aasan in Yoga</p>
      </div>
     <div class="ui top attached segment">

   
    <div class="ui divided items">
     <% yoga.forEach(function(y){ %>
     
      <div class="item">
        <div class=" ui image">
    
          <div class="column">
            <div class="ui fluid medium rounded image">
              <div style="font-size: x-small;"class="ui red ribbon label">               
                <%=y.sanskrit_name %>             
              </div>
              
              <img style="border: 1px solid black;"class="img" src="<%=y.img_url%>" alt="someImage">
            </div>
            </div>
           
        </div>
        <div class="content  customHead">
          <a class="header" href="#"><h3><%= y.english_name %></h3></a>
          <div class="meta">
           
            <span class="cinema"><%= y.created_at %></span>
          </div>
   
          <div class="description">      
           
            
               
               <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Saepe, et repellat!  nihil ex quaerat nam fuga quo.</p>
               
                    
          </div>
    
        
           <div class="extra ">
             <a target="blank"href="http://www.google.com/search?q=<%=y.sanskrit_name%>" >
              <div class="ui inverted red animated button" tabindex="0">
                <div class="visible content">Google It</div>
                <div class="hidden content">
                  <i class="chevron right circle icon"></i>
                </div>
              </div>
             </a>
             <a target="blank" href="https://www.youtube.com/embed/?listType=search&list=search+<%=y.sanskrit_name%>">
              <div class="ui inverted primary animated button" tabindex="0">
                   <div class="visible content">Check on Youtube</div>
                   <div class="hidden content">
                     <i class="edit  icon"></i>
                   </div>
                 </div>
           </a>
           </div>
         
         </div>
       </div>
     <% }); %>
    </div>
  




    </div>
     
    </div>
    <hr>
   <footer>
     <h1 style="text-align: center;">Proudly Made with <i class="heart icon"></i> by Amandeep Singh</h1>
   </footer>
  
  </body>
  </html>